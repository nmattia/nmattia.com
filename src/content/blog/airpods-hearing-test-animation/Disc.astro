---
import QuadShaderMain from "./QuadShaderMain.astro";
---

<QuadShaderMain
  uniforms={[
    { name: "uScale", min: 0.1, max: 1.0, value: 0.3 },
    { name: "uShift", min: -1.0, max: 1.0, value: 0 },
  ]}
  main={`
        uv -= vec2(uShift, 0.);
        uv /= uScale;
        return 1. - step(1., length(uv));
`}
/>
