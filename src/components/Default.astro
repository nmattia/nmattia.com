---
// Default component wrapping all pages

import Head from "./Head.astro";
import GitHubIcon from "./GitHubIcon.astro";
import LinkedInIcon from "./LinkedInIcon.astro";
import MailIcon from "./MailIcon.astro";

type Props = Parameters<typeof Head>[0];

const {
  title = undefined,
  ogType,
  description,
  og_image,
  path,
}: Props = Astro.props;
---

<!--?xml version="1.0" encoding="UTF-8"?--><!DOCTYPE html>
<html lang="en">
  <Head
    title={title}
    ogType={ogType}
    description={description}
    og_image={og_image}
    path={path}
  />

  <body>
    <div class="header">
      <div class="nav">
        <span class="links">
          <a href="/" class="home">home</a>
        </span>
        <span class="social">
          <a
            class="no-underline"
            href="https://www.github.com/nmattia"
            target="_blank"
            rel="noopener noreferrer"
          >
            <GitHubIcon />
          </a>
          <a
            class="no-underline"
            href="https://www.linkedin.com/in/nicolas-mattia/"
            target="_blank"
            rel="noopener noreferrer"><LinkedInIcon /></a
          >
          <a
            class="no-underline"
            href="mailto:nicolas@nmattia.com"
            target="_blank"
            rel="noopener noreferrer"><MailIcon /></a
          >
        </span>
      </div>
    </div>
    <div class="content">
      <slot />
    </div>
    <footer>
      <a href="https://nmattia.com" target="_blank" rel="noopener noreferrer"
        >&copy; Nicolas Mattia 2024</a
      >
    </footer>
  </body>
</html>
